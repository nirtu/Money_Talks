@* The creating Rule view that generated at the client side*@

@model Money_Talks.Models.Rules

@{
    ViewBag.Title = "Create";
}

<body style="text-align:center; width:300px; margin: auto">
<h2>Create New Rule</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Rules</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.RuleBorder)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.RuleBorder)
            @Html.ValidationMessageFor(model => model.RuleBorder)
        </div>

       
       
        <div class="editor-label">
            @Html.LabelFor(model => model.Category)
        </div>
        <div>
            <select name="Category">
                <option value="" style="display: none">Select</option>
                @foreach (string category in ViewBag.listOfOutcomesCategories)
                {    
                        <option value="@category">@category</option>
                }
            </select>
        </div>

        <p>
            <input type="submit" value="Create" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
</body>
