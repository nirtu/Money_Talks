@model Money_Talks.Models.TransactionModel

@{
    ViewBag.Title = "Pop";
}

<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html>
<head>
<title>Simple PopupMenu</title>

<style type="text/css">
.popup
{
	position:absolute;
    left: 50%;
    margin-left: -250px;
	border:solid 1px #FF9535;
    border-radius: 4px;
	background-color:#FAFF95;
	padding:2px;
    display: inline-block;
    -webkit-box-shadow: 2px 2px 10px #000;
    width: 500px;
}

#close {
    font-size:15px; 
    cursor:pointer; 
    color:red; 
    right:-4px; 
    top:4px; 
    margin-right:10px; 
    position:absolute;    
    padding-left: 6px;
    padding-right: 5px;
    
}

#close:hover {
    color:white;
    border-radius: 40px;
    background-color: red;
    -webkit-box-shadow: 1px 1px 5px #000;
}

#popupContainer {
    height:100%; 
    width:100%; 
    margin:auto
}

#popupMsg {
    width:100%; 
    height:100%;
    margin:auto; 
    margin-top:10px; 
    padding-bottom:10px;
    text-align: center;
}
</style>

<script type="text/javascript">
    //Hide a named menu
    function hide_menu(named)
    {
        //get the named menu
        var menuElement = document.getElementById(named);
        //hide it with a style attribute
        menuElement.style.display = "none";
    }
</script>
</head>
<body>

    <div class="popup" id="menu1">
        <!--Hide the menu when the text (Close popup) is clicked-->
        <span onclick="hide_menu('menu1');" id="close">x</span>
        <div id="popupContainer">
            <div  id="popupMsg">
                @foreach(var r in ViewBag.rules)
                {
                    <strong>&middot;&emsp;</strong>@r<br/>
                }
            </div>
        </div>
    </div>

<!--Mouseovering on this element will show the menu with id 'menu1', at the position of {this}, that is
this element-->
<a href="#" onmouseover="display_menu(this,'menu1');" on>Popup on hover</a>

</body>
</html>









